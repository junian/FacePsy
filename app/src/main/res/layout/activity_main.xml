<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Start Processing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/avaForProcessTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/startBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible" />

    <Button
        android:id="@+id/launchPreSurveyBtn"
        android:layout_width="242dp"
        android:layout_height="83dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#00BCD4"
        android:text="Pre Survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/launchPostSurveyBtn"
        android:layout_width="242dp"
        android:layout_height="83dp"
        android:backgroundTint="#00BCD4"
        android:text="Post Survey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launchStroopTaskBtn" />

    <Button
        android:id="@+id/launchStroopTaskBtn"
        android:layout_width="242dp"
        android:layout_height="83dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#FFC107"
        android:text="Stroop Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launchFlowerTaskBtn" />

    <Button
        android:id="@+id/launchFlowerTaskBtn"
        android:layout_width="242dp"
        android:layout_height="83dp"
        android:backgroundTint="#BEEFC8"
        android:text="Flower Task"
        app:layout_constraintBottom_toTopOf="@+id/currentProcessingTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/launchPreSurveyBtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/currentProcessingTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Click start button to start processing"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/avaForProcessTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/launchInstructionBtn"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:text="Instruction"
        app:layout_constraintBottom_toTopOf="@+id/launchPreSurveyBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

</androidx.constraintlayout.widget.ConstraintLayout>